= form_for @vehicle do |f|
  -if @vehicle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle.errors.count, "error")} prohibited this vehicle from being saved:"
      %ul
        - @vehicle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :complete_number
    = f.text_field :complete_number
  .field
    = f.label :train_type
    = f.text_field :train_type
  .field
    = f.label :train_number
    = f.text_field :train_number
  .actions
    = f.submit 'Save'
