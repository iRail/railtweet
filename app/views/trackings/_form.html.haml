= form_for @tracking do |f|
  -if @tracking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tracking.errors.count, "error")} prohibited this tracking from being saved:"
      %ul
        - @tracking.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :task
    = f.text_field :task
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.text_field :end_time
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :number_of_objects
    = f.text_field :number_of_objects
  .actions
    = f.submit 'Save'
